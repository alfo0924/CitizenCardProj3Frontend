# 允許使用舊版的 peer dependencies 解析方式
legacy-peer-deps=true

# 允許使用不安全的依賴
strict-peer-dependencies=false

# 設置 npm registry
registry=https://registry.npmjs.org/

# 設置超時時間（毫秒）
fetch-timeout=300000

# 設置重試次數
fetch-retries=5

# 啟用進度條
progress=true

# 設置日誌級別
loglevel=warn

# 自動修復審計問題
audit=false

# 不生成 package-lock.json
package-lock=false

# 設置緩存目錄
cache=.npm-cache

# 設置離線模式
offline=false

# 允許在運行時升級
engine-strict=false

# 設置 node-sass 二進制文件鏡像
sass_binary_site=https://npm.taobao.org/mirrors/node-sass/

# 設置 Electron 二進制文件鏡像
electron_mirror=https://npm.taobao.org/mirrors/electron/

# 允許使用較高版本
save-prefix='^'