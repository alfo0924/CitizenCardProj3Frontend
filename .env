# 應用程式基本設定
VUE_APP_NAME=市民卡系統
VUE_APP_VERSION=1.0.0
VUE_APP_DESCRIPTION=市民卡電影訂票系統
VUE_APP_BASE_URL=/

# API設定
VUE_APP_API_URL=http://localhost:8080/api
VUE_APP_API_TIMEOUT=10000
VUE_APP_API_PREFIX=/api
VUE_APP_API_VERSION=v1

# 認證設定
VUE_APP_JWT_SECRET=your_jwt_secret_key
VUE_APP_JWT_EXPIRATION=86400
VUE_APP_JWT_REFRESH_EXPIRATION=604800
VUE_APP_TOKEN_KEY=access_token
VUE_APP_REFRESH_TOKEN_KEY=refresh_token

# 安全性設定
VUE_APP_SECURE_COOKIE=true
VUE_APP_CSRF_TOKEN_NAME=_csrf
VUE_APP_XSS_PROTECTION=true
VUE_APP_CONTENT_SECURITY_POLICY=true
VUE_APP_RATE_LIMIT=100
VUE_APP_MAX_REQUEST_SIZE=10mb

# 第三方登入設定
VUE_APP_GOOGLE_CLIENT_ID=your_google_client_id
VUE_APP_FACEBOOK_APP_ID=your_facebook_app_id
VUE_APP_LINE_CLIENT_ID=your_line_client_id

# 支付設定
VUE_APP_PAYMENT_MIN_AMOUNT=100
VUE_APP_PAYMENT_MAX_AMOUNT=50000
VUE_APP_PAYMENT_CURRENCY=TWD
VUE_APP_PAYMENT_GATEWAY=your_payment_gateway

# 文件上傳設定
VUE_APP_UPLOAD_MAX_SIZE=5242880
VUE_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif
VUE_APP_UPLOAD_PATH=/uploads
VUE_APP_IMAGE_QUALITY=80

# 快取設定
VUE_APP_CACHE_DURATION=3600
VUE_APP_CACHE_PREFIX=citizencard_
VUE_APP_CACHE_DRIVER=redis

# 本地化設定
VUE_APP_DEFAULT_LANGUAGE=zh-TW
VUE_APP_DEFAULT_TIMEZONE=Asia/Taipei
VUE_APP_DEFAULT_CURRENCY=TWD
VUE_APP_AVAILABLE_LANGUAGES=zh-TW,en-US

# 開發環境設定
NODE_ENV=development
VUE_APP_DEBUG=true
VUE_APP_LOG_LEVEL=debug
VUE_APP_ENABLE_MOCK=true

# 效能設定
VUE_APP_COMPRESSION=true
VUE_APP_MINIFY=true
VUE_APP_SOURCE_MAP=true
VUE_APP_MODERN_BUILD=true

# 錯誤報告設定
VUE_APP_ERROR_REPORTING=true
VUE_APP_ERROR_EMAIL=errors@yourdomain.com
VUE_APP_ERROR_SLACK_WEBHOOK=your_slack_webhook_url
VUE_APP_SENTRY_DSN=your_sentry_dsn

# 網站URL設定
VUE_APP_URL=http://localhost:8080
VUE_APP_FRONTEND_URL=http://localhost:3000
VUE_APP_ADMIN_URL=http://localhost:3000/admin
VUE_APP_CDN_URL=your_cdn_url

# 社交媒體設定
VUE_APP_FACEBOOK_URL=https://facebook.com/your-page
VUE_APP_INSTAGRAM_URL=https://instagram.com/your-page
VUE_APP_LINE_URL=https://line.me/your-page
VUE_APP_YOUTUBE_URL=https://youtube.com/your-channel

# 客服設定
VUE_APP_SUPPORT_EMAIL=support@yourdomain.com
VUE_APP_SUPPORT_PHONE=(02)1234-5678
VUE_APP_SUPPORT_HOURS=週一至週五 09:00-18:00
VUE_APP_SUPPORT_LINE_ID=@your_line_id
VUE_APP_SUPPORT_MESSENGER_ID=your_messenger_id

# 系統限制設定
VUE_APP_MAX_LOGIN_ATTEMPTS=5
VUE_APP_LOGIN_TIMEOUT=300
VUE_APP_SESSION_TIMEOUT=1800
VUE_APP_PASSWORD_MIN_LENGTH=8
VUE_APP_MAX_UPLOAD_FILES=10

# 電影訂票設定
VUE_APP_MAX_TICKETS_PER_ORDER=4
VUE_APP_BOOKING_TIMEOUT=900
VUE_APP_CANCELLATION_DEADLINE=86400
VUE_APP_REFUND_PERCENTAGE=80

# 優惠券設定
VUE_APP_MAX_DISCOUNT_PERCENTAGE=50
VUE_APP_MIN_ORDER_AMOUNT=100
VUE_APP_MAX_COUPONS_PER_USER=5

# 電子錢包設定
VUE_APP_MIN_TOPUP_AMOUNT=100
VUE_APP_MAX_TOPUP_AMOUNT=10000
VUE_APP_MAX_WALLET_BALANCE=50000
VUE_APP_DAILY_TRANSFER_LIMIT=20000

# 推播通知設定
VUE_APP_PUSH_PUBLIC_KEY=your_push_public_key
VUE_APP_PUSH_PRIVATE_KEY=your_push_private_key
VUE_APP_FCM_SERVER_KEY=your_fcm_server_key

# 分析追蹤設定
VUE_APP_GOOGLE_ANALYTICS_ID=your_ga_id
VUE_APP_FACEBOOK_PIXEL_ID=your_pixel_id
VUE_APP_HOTJAR_ID=your_hotjar_id