# 應用程式設定
VUE_APP_NAME=市民卡系統
VUE_APP_VERSION=1.0.0
VUE_APP_DESCRIPTION=市民卡電影訂票系統

# API設定
VUE_APP_API_URL=http://localhost:8080/api
VUE_APP_API_TIMEOUT=10000

# JWT設定
VUE_APP_JWT_SECRET=your_jwt_secret_key
VUE_APP_JWT_EXPIRATION=86400

# 郵件服務設定
VUE_APP_SMTP_HOST=smtp.gmail.com
VUE_APP_SMTP_PORT=587
VUE_APP_SMTP_USER=your-email@gmail.com
VUE_APP_SMTP_PASSWORD=your-email-password

# 第三方登入設定
VUE_APP_GOOGLE_CLIENT_ID=your_google_client_id
VUE_APP_FACEBOOK_APP_ID=your_facebook_app_id

# 支付設定
VUE_APP_PAYMENT_MIN_AMOUNT=100
VUE_APP_PAYMENT_MAX_AMOUNT=50000

# 文件上傳設定
VUE_APP_UPLOAD_MAX_SIZE=5242880
VUE_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# 快取設定
VUE_APP_CACHE_DURATION=3600

# 系統設定
VUE_APP_DEFAULT_LANGUAGE=zh-TW
VUE_APP_DEFAULT_TIMEZONE=Asia/Taipei
VUE_APP_DEFAULT_CURRENCY=TWD

# 開發環境特定設定
NODE_ENV=development
VUE_APP_DEBUG=true
VUE_APP_LOG_LEVEL=debug

# 生產環境特定設定（需要在.env.production中覆蓋）
# NODE_ENV=production
# VUE_APP_DEBUG=false
# VUE_APP_LOG_LEVEL=error

# 安全性設定
VUE_APP_SECURE_COOKIE=true
VUE_APP_CSRF_TOKEN_NAME=_csrf
VUE_APP_XSS_PROTECTION=true

# 效能設定
VUE_APP_COMPRESSION=true
VUE_APP_MINIFY=true

# 錯誤報告設定
VUE_APP_ERROR_REPORTING=true
VUE_APP_ERROR_EMAIL=errors@yourdomain.com

# 限制設定
VUE_APP_RATE_LIMIT=100
VUE_APP_MAX_REQUEST_SIZE=10mb

# 網站URL設定
VUE_APP_URL=http://localhost:8080
VUE_APP_FRONTEND_URL=http://localhost:3000

# 社交媒體連結
VUE_APP_FACEBOOK_URL=https://facebook.com/your-page
VUE_APP_INSTAGRAM_URL=https://instagram.com/your-page
VUE_APP_LINE_URL=https://line.me/your-page

# 客服設定
VUE_APP_SUPPORT_EMAIL=support@yourdomain.com
VUE_APP_SUPPORT_PHONE=(02)1234-5678
VUE_APP_SUPPORT_HOURS=週一至週五 09:00-18:00